rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for user data
    match /users/{userId} {
      // Users can read/update their own profile. Anyone can create a user doc (on signup).
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Rules for academic resources
    match /resources/{resourceId} {
      // Anyone can read approved resources. Logged-in users can read their own pending/rejected resources.
      allow read: if resource.data.status == 'approved' 
                  || (request.auth.uid != null && resource.data.uploaderId == request.auth.uid);
      
      // Logged-in users can create resources if the data is valid.
      allow create: if request.auth.uid != null
                    && request.resource.data.uploaderId == request.auth.uid
                    && request.resource.data.status == 'pending';

      // Only Admins can update the status of a resource.
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Rules for dynamic metadata (universities, departments, subjects)
    match /metadata/{docId} {
        // Any authenticated user can read the lists.
        allow read: if request.auth.uid != null;
        // Any authenticated user can add to the lists (e.g., when adding an "Other" university).
        allow write: if request.auth.uid != null;
    }
  }
}
